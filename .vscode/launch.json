  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch JS",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "args": ["${file}"],
      "type": "node"
    },
    {
      "name": "Launch TS",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${file}"]
    }
  ]
}
